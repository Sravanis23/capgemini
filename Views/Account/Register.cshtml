@model RailwayReservationMVC.Models.RegisterViewModel

<form method="post" asp-action="Register" asp-controller="Account">
    <div class="form-group">
        <label>Username:</label>
        <input type="text" asp-for="Username" class="form-control" required />
    </div>
    
    <div class="form-group">
        <label>Email:</label>
        <input type="email" asp-for="Email" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Password:</label>
        <input type="password" asp-for="Password" class="form-control" required />
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <button type="submit" class="btn btn-primary">Register</button>
</form>
