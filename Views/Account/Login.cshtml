@model RailwayReservationMVC.Models.LoginModel

<form method="post" asp-action="Login" asp-controller="Account">
    <div class="form-group">
        <label>Email:</label>
        <input type="email" asp-for="Email" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Password:</label>
        <input type="password" asp-for="Password" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Login As:</label>
        <select asp-for="LoginType" class="form-control">
            <option value="User">User</option>
            <option value="Admin">Admin</option>
        </select>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <button type="submit" class="btn btn-success">Login</button>

    <br />
    <p>Don't have an account? <a asp-action="Register" asp-controller="Account" class="btn btn-primary">Register Here</a></p>
</form>
