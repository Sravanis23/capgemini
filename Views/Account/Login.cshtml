@model RailwayReservationMVC.Models.LoginModel

<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="glass-container col-md-4 p-4">
        <h2 class="text-center">Login</h2>

        <form method="post" asp-action="Login" asp-controller="Account">
            <div class="mb-3">
                <label>Email:</label>
                <input type="email" asp-for="Email" class="form-control" required placeholder="Enter your email" />
            </div>

            <div class="mb-3">
                <label>Password:</label>
                <input type="password" asp-for="Password" class="form-control" required placeholder="Enter your password" />
            </div>

            <div class="mb-3">
                <label>Login As:</label>
                <select asp-for="LoginType" class="form-control">
                    <option value="User">User</option>
                    <option value="Admin">Admin</option>
                </select>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <button type="submit" class="btn btn-primary w-100">Login</button>

            <p class="text-center mt-3">
                Don't have an account? 
                <a asp-action="Register" asp-controller="Account" class="btn btn-outline-light">Register Here</a>
            </p>
        </form>
    </div>
</div>
